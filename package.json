{
  "description" : "Set navigation bar color for android lolipop and higher",
  "types" : "dist/esm/index.d.ts",
  "unpkg" : "dist/plugin.js",
  "author" : "Cap-go <contact@capgo.app>",
  "devDependencies" : {
    "typescript" : "^5.7.3",
    "swiftlint" : "^2.0.0",
    "@capacitor/core" : "^7.0.0",
    "@capacitor/android" : "^7.0.0",
    "@capacitor/docgen" : "^0.3.0",
    "@types/node" : "^22.13.1",
    "@capacitor/ios" : "^7.0.0",
    "eslint" : "^8.57.0",
    "rollup" : "^4.34.6",
    "@capacitor/cli" : "^7.0.0",
    "husky" : "^9.1.7",
    "prettier-plugin-java" : "^2.6.7",
    "rimraf" : "^6.0.1",
    "prettier" : "^3.4.2",
    "@ionic/eslint-config" : "^0.4.0",
    "eslint-plugin-import" : "^2.31.0",
    "@ionic/prettier-config" : "^4.0.0",
    "@ionic/swiftlint-config" : "^2.0.0"
  },
  "module" : "dist/esm/index.js",
  "repository" : {
    "type" : "git",
    "url" : "git+https://github.com/Cap-go/capacitor-navigation-bar.git"
  },
  "keywords" : [
    "capacitor",
    "plugin",
    "navigation bar",
    "android",
    "native"
  ],
  "bugs" : {
    "url" : "https://github.com/Cap-go/capacitor-navigation-bar/issues"
  },
  "main" : "dist/plugin.cjs.js",
  "swiftlint" : "@ionic/swiftlint-config",
  "name" : "@capgo/capacitor-navigation-bar",
  "eslintConfig" : {
    "extends" : "@ionic/eslint-config/recommended"
  },
  "peerDependencies" : {
    "@capacitor/core" : ">=7.0.0"
  },
  "version" : "7.1.33",
  "prettier" : "@ionic/prettier-config",
  "license" : "MIT",
  "scripts" : {
    "verify" : "npm run verify:ios && npm run verify:android && npm run verify:web",
    "lint" : "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "verify:web" : "npm run build",
    "prepublishOnly" : "npm run build",
    "eslint" : "eslint .",
    "build" : "npm run clean && npm run docgen && tsc && rollup -c rollup.config.mjs",
    "prettier" : "prettier --config .prettierrc.js \"**/*.{css,html,ts,js,java}\"",
    "verify:android" : "cd android && ./gradlew clean build test && cd ..",
    "swiftlint" : "node-swiftlint",
    "docgen" : "docgen --api NavigationBarPlugin --output-readme README.md --output-json dist/docs.json",
    "fmt" : "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --autocorrect --format",
    "verify:ios" : "xcodebuild -scheme CapgoCapacitorNavigationBar -destination generic/platform=iOS",
    "clean" : "rimraf ./dist",
    "watch" : "tsc --watch"
  },
  "capacitor" : {
    "android" : {
      "src" : "android"
    },
    "ios" : {
      "src" : "ios"
    }
  },
  "files" : [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "CapgoCapacitorNavigationBar.podspec",
    "ios/Sources",
    "ios/Tests",
    "Package.swift"
  ]
}